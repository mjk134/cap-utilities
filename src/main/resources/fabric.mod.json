  "authors": [
    "mjk134"
  ],
  "contact": {
    "homepage": "https://github.com/mjk134/cap-utilities",
    "sources": "https://github.com/mjk134/cap-utilities"
  },

  "license": "CC0-1.0",
  "icon": "assets/cap-utilities/icon.png",

  "environment": "client",
  "entrypoints": {
